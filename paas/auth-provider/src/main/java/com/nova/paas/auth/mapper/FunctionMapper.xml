<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.nova.paas.auth.mapper.FunctionMapper">
    <resultMap id="function" type="com.nova.paas.auth.entity.Function">
        <id property="id" column="id"/>
        <result property="tenantId" column="tenant_id"/>
        <result property="funcName" column="func_name"/>
        <result property="funcCode" column="func_code"/>
        <result property="funcOrder" column="func_order"/>
        <result property="funcType" column="func_type"/>
        <result property="parentId" column="parent_id"/>
        <result property="createdBy" column="created_by"/>
        <result property="createdAt" column="created_at"/>
        <result property="modifiedBy" column="modified_by"/>
        <result property="modifiedAt" column="modified_at"/>
        <result property="delFlag" column="del_flag"/>
    </resultMap>

    <insert id="insert" parameterType="com.nova.paas.auth.entity.Function">
        insert into au_function (id, tenant_id,func_code,func_name,func_order,func_type,
        parent_id,created_by,created_at)
        values (#{id}, #{tenantId},#{funcCode},#{funcName},#{funcOrder},
        #{funcType},#{parentId},#{createdBy},#{createdAt})
    </insert>

    <update id="batchDelete">
        update au_function set del_flag=1,modified_by=#{modifiedBy},modified_at=#{modifiedAt} WHERE tenant_id=#{tenantId}
        <if test="funcIds != null and funcIds.size()>0">
            AND id IN
            <foreach item="item" collection="funcIds" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
        and del_flag=0
    </update>

    <update id="update" parameterType="com.nova.paas.auth.entity.Function">
        update au_function
        <set>
            <if test="funcName != null">
                func_name = #{funcName},
            </if>
            <if test="funcOrder != null">
                func_order = #{funcOrder},
            </if>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
            <if test="modifiedBy != null">
                modified_by = #{modifiedBy},
            </if>
            <if test="modifiedAt != null">
                modified_at = #{modifiedAt},
            </if>
        </set>
        where id = #{id} and tenant_id=#{tenantId}
    </update>

    <select id="queryFunction" resultMap="function">
        select * from au_function where tenant_id=#{tenantId}
        <if test="ids != null and ids.size()>0">
            AND id IN
            <foreach item="idSet" collection="ids" open="(" separator="," close=")">
                #{idSet}
            </foreach>
        </if>
        <if test="funcName != null and funcName!=''">
            AND func_name=#{funcName}
        </if>
        <if test="parentId != null and parentId!=''">
            AND parent_id=#{parentId}
        </if>
        <if test="funcType != null ">
            AND func_type=#{funcType}
        </if>
        and del_flag=0
    </select>

</mapper>
