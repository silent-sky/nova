<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.nova.paas.auth.mapper.FunctionMapper">
    <resultMap id="function" type="com.nova.paas.auth.entity.Function">
        <id property="id" column="id"/>
        <result property="tenantId" column="tenant_id"/>
        <result property="appId" column="app_id"/>
        <result property="funcName" column="func_name"/>
        <result property="funcCode" column="func_code"/>
        <result property="funcOrder" column="func_order"/>
        <result property="funcType" column="func_type"/>
        <result property="levelCode" column="level_code"/>
        <result property="parentCode" column="parent_code"/>
        <result property="creator" column="creator"/>
        <result property="createTime" column="create_time"/>
        <result property="delFlag" column="del_flag"/>
        <result property="modifier" column="modifier"/>
        <result property="modifyTime" column="modify_time"/>
    </resultMap>


    <update id="batchDel">
        update auth_function set del_flag=1,modifier=#{modifier},modify_time=#{modifyTime} WHERE tenant_id=#{tenantId} and app_id=#{appId}
        <if test="funcCodeList != null and funcCodeList.size()>0">
            AND func_code IN
            <foreach item="codes" collection="funcCodeList" open="(" separator="," close=")">
                #{codes}
            </foreach>
        </if>
        and del_flag=0
    </update>

    <select id="queryFunction" resultMap="function">
        select * from auth_function WHERE tenant_id=#{tenantId} and app_id=#{appId}
        <if test="ids != null and ids.size()>0">
            AND id IN
            <foreach item="idSet" collection="ids" open="(" separator="," close=")">
                #{idSet}
            </foreach>
        </if>
        <if test="funcCodes != null and funcCodes.size()>0">
            AND func_code IN
            <foreach item="codes" collection="funcCodes" open="(" separator="," close=")">
                #{codes}
            </foreach>
        </if>
        <if test="funcName != null and funcName!=''">
            AND func_name=#{funcName}
        </if>
        <if test="funcOrder != null and funcOrder!=''">
            AND func_order=#{funcOrder}
        </if>
        <if test="levelCode != null and levelCode!=''">
            AND level_code=#{levelCode}
        </if>
        <if test="parentCode != null and parentCode!=''">
            AND parent_code=#{parentCode}
        </if>
        <if test="funcType != null ">
            AND func_type=#{funcType}
        </if>
        and del_flag=0
    </select>


    <select id="queryFunctionCode" resultType="String">
        select func_code from auth_function WHERE tenant_id=#{tenantId} and app_id=#{appId}
        <if test="ids != null and ids.size()>0">
            AND id IN
            <foreach item="idSet" collection="ids" open="(" separator="," close=")">
                #{idSet}
            </foreach>
        </if>
        <if test="funcCodes != null and funcCodes.size()>0">
            AND func_code IN
            <foreach item="codes" collection="funcCodes" open="(" separator="," close=")">
                #{codes}
            </foreach>
        </if>
        <if test="funcName != null and funcName!=''">
            AND func_name=#{funcName}
        </if>
        <if test="funcOrder != null and funcOrder!=''">
            AND func_order=#{funcOrder}
        </if>
        <if test="levelCode != null and levelCode!=''">
            AND level_code=#{levelCode}
        </if>
        <if test="parentCode != null and parentCode!=''">
            AND parent_code=#{parentCode}
        </if>
        <if test="funcType != null ">
            AND func_type=#{funcType}
        </if>
        and del_flag=0
    </select>


</mapper>
